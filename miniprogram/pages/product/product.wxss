

page {
  background-color: #fff;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

/* 轮播图图片 */
.swiper-item-img {
  width: 100%;
  height: 100%;
}

.page-foot {
  margin-top: 50rpx;
  height: 100px;
}

/* 列表 */
.page-list {
  display: block;
  box-sizing: border-box;
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 10rpx;
}

/* 列表项外壳 */
.list-item-wrap {
  display: block;
  box-sizing: border-box;
  border: solid 10rpx #fff;
  display: inline-block;
  background-color: #fff;
  width: 50%;
}

/* 列表项 */
.list-item {
  box-sizing: border-box;
  width: 100%;
  border: solid 3rpx #ebebeb;
  overflow-x: hidden;
}

/* 列表中的样式 */
.list-item-img {
  box-sizing: border-box;
  width: 100%;
}

/* 列表项中文字区域 */
.list-item-section {
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
}
.list-item-title{
  padding: 0 20rpx;
  height: 85rpx;
}
/* 次要的文字颜色 */
.secondary {
  color: #ccc
}

/* 现价 */
.list-item-cur-price {
  color: #e0080b;
  font-size: 38rpx;
}

/* 原价 */
.list-item-ori-price {
  text-decoration: line-through
}