page {
    background-color: #fff;
    height: 100%;
    font-size: 32rpx;
    line-height: 1.6;
}

.tab_bar {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 50rpx;
    line-height: 50px;
    margin: 20rpx 0;
}

.tab_bar_item.active {
    color: red;
}

.tab_bar_item {
    flex: 1;
    text-align: center;
}

.divider {
    border-left: solid 1px #ccc;
    height: 100%;
}

.foot {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
}

.foot-left {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    flex: 4;
    height: 100%;
    border-top: 2rpx solid #ccc;
    box-sizing: border-box;
}

.foot-left-item {
    flex: 1;
    text-align: center;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.foot-left-item button {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #fff;
}

.foot-right {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    flex: 6;
    height: 100%;
}

.foot-right-item {
    flex: 1;
    text-align: center;
    height: 100%;
    color: #fff;
}

.foot-icon {
    width: 40rpx;
    height: 40rpx;
    margin-bottom: 10rpx;
}

.dbtext {
    line-height: 15px;
    color: #666;
    font-size: 12px;
}

.modal-mask {
    position: fixed;
    height: 100%;
    z-index: 1000;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #00000073;
}

.modal-wrap {
    position: fixed;
    z-index: 2000;
    bottom: 0;
    width: 100%;
    background-color: #fff;
}

.ok_btn{
    background-color: red;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    width: 100%;
    color: #fff;
}